generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String      @unique @default(uuid())
  name        String      @db.VarChar(255)
  description String
  image       String
  typeId      String      @db.VarChar(127)
  type        ProductType @relation(fields: [typeId], references: [id])
}

model ProductType {
  id      String    @unique @db.VarChar(127)
  name    String    @db.VarChar(255)
  Product Product[]
}
